<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">
    <LinearLayout
        android:id="@+id/receipt_edit_datepick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Spinner
            android:id="@+id/receipt_edit_sp_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:prompt="@string/type"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <Spinner
            android:id="@+id/receipt_edit_sp_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:prompt="@string/type"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <Spinner
            android:id="@+id/receipt_edit_sp_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:prompt="@string/type"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    </LinearLayout>

    <EditText
        android:id="@+id/receipt_edit_et_time"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inputType="time"
        android:hint="@string/time"></EditText>

    <EditText
        android:id="@+id/receipt_edit_et_amount"
        android:layout_width="match_parent"
        android:inputType="number"
        android:layout_height="match_parent"
        android:hint="@string/amount"
        />

    <Spinner
        android:id="@+id/receipt_edit_sp_type"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
